<% unless current_user?(@user) %>
    <div id="follow_form">
      <% if current_user.following?(@user) %>
          <%=	render 'unfollow' %>
      <% elsif !current_user.solicitations_pending.include?(@user) %>
          <%= render 'solicitations/solicitation' %>
      <% else %>
          <%= render 'solicitations/undo_solicitation' %>
      <% end %>
    </div>
<% end %>